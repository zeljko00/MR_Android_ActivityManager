<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MR_ActivityManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/variant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="android:statusBarColor">@color/error</item>
        <item name="android:actionBarTheme">@style/CustomActionBarStyle</item>
    </style>
    <style name="CustomActionBarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Customize the ActionBar attributes -->
        <item name="android:background">@color/primary</item>
        <!-- Other ActionBar attributes -->
    </style>
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/onSurface</item>
        <item name="itemTextColor">@color/onSurface</item>
        <item name="android:background">@color/surface</item>
    </style>
    <style name="FragmentStyle" parent="@style/Theme.AppCompat">
        <item name="android:background">@color/background</item>
    </style>
    <style name="SettingsHeader" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SettingsOption" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SettingsValue" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="HorizontalLine" parent="@style/Theme.AppCompat">
        <item  name="android:layout_height">2dp</item>
        <item name="android:background">@color/surface</item>
        <item name="android:elevation">6dp</item>
    </style>
    <style name="VerticalLine" parent="@style/Theme.AppCompat">
        <item  name="android:layout_width">4dp</item>
        <item name="android:background">@color/background</item>
        <item name="android:elevation">6dp</item>
    </style>
    <style name="SpinnerItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ListItemDateSmall" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ListItemDateBig" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItemTitle" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ListItemType" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ActivityCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="InputLabelStyle" parent="@style/Theme.AppCompat">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">10dp</item>
    </style>
    <style name="SmallTextCustomView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:layout_marginTop">@dimen/xxlarge_margin</item>
        <item name="android:layout_marginStart">@dimen/xxlarge_margin</item>
        <item name="android:layout_marginEnd">@dimen/xxlarge_margin</item>
    </style>
    <style name="MediumTextCustomView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:layout_marginTop">@dimen/xxlarge_margin</item>
        <item name="android:layout_marginStart">@dimen/xxlarge_margin</item>
        <item name="android:layout_marginEnd">@dimen/xxlarge_margin</item>
    </style>
    <style name="LargeTextCustomView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:layout_marginTop">@dimen/xxlarge_margin</item>
        <item name="android:layout_marginStart">@dimen/xxlarge_margin</item>
        <item name="android:layout_marginEnd">@dimen/xxlarge_margin</item>
    </style>
</resources>